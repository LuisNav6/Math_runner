<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/Darker"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="60dp"
        android:columnCount="1"
        android:rowCount="1"
        android:alignmentMode="alignBounds"
        android:rowOrderPreserved="false">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_lite"
            android:layout_gravity="center"
            android:layout_column="0" />

        <!-- GridLayout para "Settings" -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="5"
            android:background="#DDEEF9"
            android:padding="16dp"
            android:layout_gravity="center_horizontal">

            <!-- Título "Settings" -->
            <TextView
                android:id="@+id/settingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal" />

            <!-- GridLayout para elementos "Volumen" -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:layout_gravity="center_horizontal">

                <!-- TextView para indicar el volumen -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical" />

                <!-- SeekBar para ajustar el volumen -->
                <SeekBar
                    android:id="@+id/volumeSeekBar"
                    style="@style/SeekBarStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:layout_gravity="center_vertical" />
            </GridLayout>

            <!-- GridLayout para elementos "Volumen" -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:layout_gravity="center_horizontal">

                <!-- TextView para indicar el volumen -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty Level"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical" />
<!-- Seekbar para la dificultad-->
                <SeekBar
                    android:id="@+id/difficultSeekBar"
                    style="@style/SeekBarStyle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:max="2"
                    android:layout_gravity="center_vertical"
                    android:thumb="@drawable/custom_thumb" />
            </GridLayout>

            <!-- Botón para mutear/desmutear música -->
            <android.widget.Button
                android:textColor="@color/white"
                android:id="@+id/musicMuteButton"
                android:text="Mute Music"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal" />

            <android.widget.Button
                android:id="@+id/backButton"
                android:textColor="@color/white"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/button_background"
                android:text="Back"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />
        </GridLayout>
    </GridLayout>
</FrameLayout>
